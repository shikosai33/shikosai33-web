---
import Layout from "@/layouts/Layout.astro";

import type { CollectionEntry } from "astro:content";
import { BookOpen, MapPinned } from "lucide-astro";
import EventCard from "@/components/EventCard.astro";
import { ArrowLeft } from "lucide-astro";
import ButtonLink from "@/components/ButtonLink.astro";
import ColoredContainer from "@/components/ColoredContainer.astro";
import ColoredHeading from "@/components/ColoredHeading.astro";
import SubHeading from "@/components/SubHeading.astro";

const SLUGS_INDOOR_DAY1 = [
  "dance-club",
  "biscuit",
  "musica",
  "hit-on-limit",
  "jeryco",
  "aeinz",
  "gasaire-plankton",
  "flip-flop-fullerene",
  "kingfrog",
  "mi-media-naranja",
  "shelly-coco",
  "marks",
  "crazy-butter-knife",
  "i-scream",
] as const satisfies CollectionEntry<"events">["slug"][];

const SLUGS_INDOOR_DAY2 = [
  "d-c",
  "nanashi",
  "m1-band",
  "shichimi-mayonnaise",
  "high-side",
  "gatchiri-mutchiri-pandars",
  "mmmmic",
  "plushie",
  "yoacopi",
  "negiduction",
  "snowy",
  "bright-night",
] as const satisfies CollectionEntry<"events">["slug"][];

const SLUGS_OUTDOOR_DAY1 = [
  "chuonikizu",
  "niowase",
  "seki-tomohiro",
  "osu-penguin1",
  "txit1",
  "brass-band",
  "whats-in-the-box",
  "osu-penguin2",
  "syoten",
  "isador",
  "alpaca1",
  "nida-ira",
] as const satisfies CollectionEntry<"events">["slug"][];

const SLUGS_OUTDOOR_DAY2 = [
  "alpaca2",
  "txit2",
  "speed-eating",
  "sasaki",
  "kemo",
  "kosensei-no-shucho",
  "cosplay-show",
  "himitsu-bakuro",
  "kintokisan",
] as const satisfies CollectionEntry<"events">["slug"][];

const SLUGS_OTHERS_DAY1 = [
  "stamp-rally",
] as const satisfies CollectionEntry<"events">["slug"][];

const SLUGS_OTHERS_DAY2 = [
  "id-lottery",
  "fireworks",
] as const satisfies CollectionEntry<"events">["slug"][];
---

<Layout title="イベント">
  <main class="flex flex-col items-center w-full gap-6">
    <ColoredContainer class="flex-col w-full" color="violet">
      <div class="flex items-center justify-between w-full">
        <ColoredHeading
          as="h2"
          class="text-3xl"
          text="イベント"
          color="violet"
        />
        <div class="flex items-center gap-1.5">
          <BookOpen class="inline w-4 h-4 stroke-[2px] stroke-mauve-11" />
          <p class="text-sm font-bold text-mauve-11">このページの目次</p>
        </div>
      </div>

      <div class="grid w-full grid-cols-2 gap-3">
        <a
          href="#indoor-day1"
          class="w-full font-Dela text-sm text-center text-violet-11 p-2.5 rounded-lg bg-violet-3"
          >屋内ステージ1日目 <span class="text-blue-11">(土曜日)</span></a
        >
        <a
          href="#indoor-day2"
          class="w-full font-Dela text-sm text-center text-violet-11 p-2.5 rounded-lg bg-violet-3"
          >屋内ステージ2日目 <span class="text-pink-11">(日曜日)</span></a
        >
        <a
          href="#outdoor-day1"
          class="w-full font-Dela text-sm text-center text-violet-11 p-2.5 rounded-lg bg-violet-3"
          >屋外ステージ1日目 <span class="text-blue-11">(土曜日)</span></a
        >
        <a
          href="#outdoor-day2"
          class="w-full font-Dela text-sm text-center text-violet-11 p-2.5 rounded-lg bg-violet-3"
          >屋外ステージ2日目 <span class="text-pink-11">(日曜日)</span></a
        >
        <a
          href="#others"
          class="col-span-2 w-full font-Dela text-sm text-center text-violet-11 p-2.5 rounded-lg bg-violet-3"
          >その他</a
        >
      </div>
    </ColoredContainer>

    <ColoredContainer class="flex-col" color="violet">
      <div class="flex flex-col items-center w-full md:flex-row gap-9">
        <ColoredHeading
          as="h2"
          color="violet"
          text="屋内ステージ"
          class="text-4xl"
        />
        <div class="flex flex-col items-center md:items-start">
          <div class="flex items-center gap-1.5">
            <MapPinned class="inline w-4 h-4 stroke-[2px] stroke-mauve-11" />
            <p class="text-sm font-bold text-mauve-11">
              第一体育館 屋内ステージ
            </p>
          </div>
          <p class="relative">
            <span
              data-text="屋内ステージでは、学生有志が結成した様々なバンド•ダンスサークルによる披露が楽しめます！"
              class:list={[
                "inline-block text-base font-Dela text-mauve-3 text-stroke-mauve-11 text-stroke-2 paint-sfm",
                "before:content-[attr(data-text)/''] before:absolute before:inset-0 before:z-1 before:text-stroke-[0px] before:text-transparent before:bg-mauve-3 before:bg-clip-text before:pointer-events-none",
              ]}
            >
              屋内ステージでは、学生有志が結成した様々なバンド•ダンスサークルによる披露が楽しめます！
            </span>
          </p>
        </div>
      </div>
      <div class="grid w-full grid-cols-1 gap-9 xl:grid-cols-2">
        <div class="flex flex-col items-center gap-6">
          <SubHeading
            id="indoor-day1"
            as="h3"
            class="sticky z-20 top-20 md:top-6"
            >1日目 - 10月26日 <span class="text-blue-11">(土)</span></SubHeading
          >
          {
            SLUGS_INDOOR_DAY1.map((slug) => (
              <EventCard type="list" slug={slug} class="w-full" />
            ))
          }
        </div>
        <div class="flex flex-col items-center gap-6">
          <SubHeading
            id="indoor-day2"
            as="h3"
            class="sticky z-20 top-20 md:top-6"
            >2日目 - 10月27日 <span class="text-pink-11">(日)</span></SubHeading
          >
          {
            SLUGS_INDOOR_DAY2.map((slug) => (
              <EventCard type="list" slug={slug} class="w-full" />
            ))
          }
        </div>
      </div>
    </ColoredContainer>

    <ColoredContainer class="flex-col" color="violet">
      <div class="flex flex-col items-center w-full md:flex-row gap-9">
        <ColoredHeading
          as="h2"
          color="violet"
          text="屋外ステージ"
          class="text-4xl"
        />
        <div class="flex flex-col items-center md:items-start">
          <div class="flex items-center gap-1.5">
            <MapPinned class="inline w-4 h-4 stroke-[2px] stroke-mauve-11" />
            <p class="text-sm font-bold text-mauve-11">
              正門ロータリー 屋外ステージ
            </p>
          </div>
          <p class="relative">
            <span
              data-text="屋外ステージでは、学生有志が主催するイベントが楽しめます！"
              class:list={[
                "inline-block text-base font-Dela text-mauve-3 text-stroke-mauve-11 text-stroke-2 paint-sfm",
                "before:content-[attr(data-text)/''] before:absolute before:inset-0 before:z-1 before:text-stroke-[0px] before:text-transparent before:bg-mauve-3 before:bg-clip-text before:pointer-events-none",
              ]}
            >
              屋外ステージでは、学生有志が主催するイベントが楽しめます！
            </span>
          </p>
        </div>
      </div>
      <div class="grid w-full grid-cols-1 gap-9 xl:grid-cols-2">
        <div class="flex flex-col items-center gap-6">
          <SubHeading
            id="outdoor-day1"
            as="h3"
            class="sticky z-20 top-20 md:top-6"
            >1日目 - 10月26日 <span class="text-blue-11">(土)</span></SubHeading
          >
          {
            SLUGS_OUTDOOR_DAY1.map((slug) => (
              <EventCard type="list" slug={slug} class="w-full" />
            ))
          }
        </div>
        <div class="flex flex-col items-center gap-6">
          <SubHeading
            id="outdoor-day2"
            as="h3"
            class="sticky z-20 top-20 md:top-6"
            >2日目 - 10月27日 <span class="text-pink-11">(日)</span></SubHeading
          >
          {
            SLUGS_OUTDOOR_DAY2.map((slug) => (
              <EventCard type="list" slug={slug} class="w-full" />
            ))
          }
        </div>
      </div>
    </ColoredContainer>
    <ColoredContainer class="flex-col" color="violet">
      <div class="flex flex-col items-center w-full md:flex-row gap-9">
        <ColoredHeading
          id="others"
          as="h2"
          color="violet"
          text="その他"
          class="text-4xl"
        />
        <div class="flex flex-col items-center md:items-start">
          <p class="relative">
            <span
              data-text="グラウンドや学校全体で行われるイベントです！ぜひお楽しみください！"
              class:list={[
                "inline-block text-base font-Dela text-mauve-3 text-stroke-mauve-11 text-stroke-2 paint-sfm",
                "before:content-[attr(data-text)/''] before:absolute before:inset-0 before:z-1 before:text-stroke-[0px] before:text-transparent before:bg-mauve-3 before:bg-clip-text before:pointer-events-none",
              ]}
            >
              グラウンドや学校全体で行われるイベントです！ぜひお楽しみください！
            </span>
          </p>
        </div>
      </div>
      <div class="grid w-full grid-cols-1 gap-9 xl:grid-cols-2">
        <div class="flex flex-col items-center gap-6">
          <SubHeading as="h3" class="sticky z-20 top-20 md:top-6"
            >1日目 - 10月26日 <span class="text-blue-11">(土)</span></SubHeading
          >
          {
            SLUGS_OTHERS_DAY1.map((slug) => (
              <EventCard type="list" slug={slug} class="w-full" />
            ))
          }
        </div>
        <div class="flex flex-col items-center gap-6">
          <SubHeading as="h3" class="sticky z-20 top-20 md:top-6"
            >2日目 - 10月27日 <span class="text-pink-11">(日)</span></SubHeading
          >
          {
            SLUGS_OTHERS_DAY2.map((slug) => (
              <EventCard type="list" slug={slug} class="w-full" />
            ))
          }
        </div>
      </div>
    </ColoredContainer>
  </main>
  <ButtonLink href="/" color="violet">
    <ArrowLeft />トップページに戻る
  </ButtonLink>
</Layout>
