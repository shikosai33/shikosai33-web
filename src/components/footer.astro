  <div class="flex flex-col justify-center mb-8 md:justify-normal md:flex-row">
    <a
      href="https://www.ibaraki-ct.ac.jp/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src={Niticlogo}
        alt="第33回茨香祭のロゴ"
        class="w-auto px-16 py-6 md:pb-0"
      />
    </a>
    <p class="text-mauve-4 pl-16">
      〒312-8508 茨城県 ひたちなか市 中根866<br />TEL 029-272-5201
    </p>
  </div>
